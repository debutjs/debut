{
  "compileOnSave": false,
  "exclude": [
    "examples",
    "node_modules",
    "src/view",
    "src/state",
    "src/presentation",
    "src/helper",
    "src/components"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "jsx": "preserve",
    "target": "es2016",
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "src": ["src"]
    }
  }
}